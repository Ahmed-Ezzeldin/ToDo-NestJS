{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "core/services/mail/templates/**/*",
        "outDir": "dist/src"
      },
      {
        "include": "core/services/i18n/**/*"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}